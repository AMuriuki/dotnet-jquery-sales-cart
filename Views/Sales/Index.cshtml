@{
    ViewData["Title"] = "Home Page";
}
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Add Sale</h4>
                <h6>Add your new sale</h6>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Customer</label>
                            <div class="input-groupicon">
                                <div class="ui-widget">
                                    <input id="" class="selectCustomer" type="text"
                                        placeholder="Please type customer name and select...">
                                    <div class="addonset">
                                        <img src="/images/scanners.svg" alt="img">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Date</label>
                            <div class="input-groupicon">
                                <input type="text" placeholder="Choose Date" class="datetimepicker date">
                                <a class="addonset">
                                    <img src="/images/calendars.svg" alt="img">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Product Name</label>
                            <div class="input-groupicon">
                                <div class="ui-widget">
                                    <input id="selectProduct" type="text"
                                        placeholder="Please type product name or code and select...">
                                    <div class="addonset">
                                        <img src="/images/scanners.svg" alt="img">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="table-responsive mb-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="cart-table-body">

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Tax (%)</label>
                            <span class="d-none tax-warning" style="color:red">Tax % cannot be more than 100</span>
                            <input class="tax-input" type="number" readonly>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Discount (%)</label>
                            <span class="d-none discount-warning" style="color:red">Discount % cannot be more than
                                100</span>
                            <input class="discount-input" type="number">
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Shipping</label>
                            <input class="shipping-input" type="number">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 ">
                        <div class="total-order w-100 max-widthauto m-auto mb-4">
                            <ul>
                                <li>
                                    <h4>Tax</h4>
                                    <h5>
                                        Ksh.&nbsp;<span class="tax-value">0.00</span>
                                        (<span class="tax-percentage">0)</span>
                                    </h5>
                                </li>
                                <li>
                                    <h4>Discount</h4>
                                    <h5>
                                        Ksh.&nbsp;<span class="discount-value">0.00</span>
                                        (<span class="discount-percentage">0)</span>
                                    </h5>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="total-order w-100 max-widthauto m-auto mb-4">
                            <ul>
                                <li>
                                    <h4>Shipping</h4>
                                    <h5>
                                        Ksh.&nbsp;<span class="shipping-value">0.00</span>
                                    </h5>
                                </li>
                                <li>
                                    <h4>Grand Total</h4>
                                    <h5>Ksh. <span class="total">0.00</span></h5>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <a id="submitBtn" href="javascript:void(0);" class="btn btn-submit me-2">Submit</a>
                    <a href="javascript:void(0);" class="btn btn-cancel">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>